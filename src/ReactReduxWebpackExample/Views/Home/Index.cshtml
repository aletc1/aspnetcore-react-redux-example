@{
    ViewData["Title"] = "Home";
}
<style>
    .startup-loader {
        border: 16px solid #f3f3f3; /* Light grey */
        border-top: 16px solid #3498db; /* Blue */
        border-radius: 50%;
        width: 120px;
        height: 120px;
        animation: spin 2s linear infinite;
        position: absolute;
        top: 35%;
        left: 50%;
        margin-left: -50px; /* margin is -0.5 * dimension */
        margin-top: -25px;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }
</style>

<div id="react-app" asp-prerender-module="src/dist/main-server"><div class="startup-loader"></div></div>

@section scripts {
    <script src="~/dist/main-client.js" asp-append-version="true"></script>
}
